<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:javaee="http://java.sun.com/xml/ns/javaee"
	xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
  <display-name>exchgate-service</display-name>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
			classpath*:conf/spring/remoting-main-beans.xml,
	   		classpath*:conf/spring/jresplus-cep-beans.xml,
			/WEB-INF/conf/*-beans.xml
		</param-value>
  </context-param>
  <context-param>
    <param-name>JresConfigLocation</param-name>
    <param-value>
			/WEB-INF/conf/server.properties
		</param-value>
  </context-param>
  <context-param>
    <param-name>log4jConfigLocation</param-name>
    <param-value>/WEB-INF/conf/log4j.properties</param-value>
  </context-param>
  <context-param>
    <param-name>log4jExposeWebAppRoot</param-name>
    <param-value>true</param-value>
  </context-param>
  <context-param>
    <param-name>log4jRefreshInterval</param-name>
    <param-value>10000</param-value>
  </context-param>
  <context-param>
    <param-name>webAppRootKey</param-name>
    <param-value>demo.root</param-value>
  </context-param>
  <context-param>
    <param-name>configOuterFlag</param-name>
    <param-value>false</param-value>
  </context-param>
  <context-param>
    <param-name>socketPort</param-name>
    <param-value>5800</param-value>
  </context-param>
  <listener>
    <listener-class>
			com.hundsun.jresplus.beans.config.PropertyLocationListener</listener-class>
  </listener>
  <listener>
    <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
  </listener>
  <listener>
    <listener-class>com.hundsun.jresplus.web.context.ContextLoaderListener</listener-class>
  </listener>
  <listener>
    <listener-class>
			org.springframework.web.util.IntrospectorCleanupListener</listener-class>
  </listener>
  <listener>
    <description>Socket 服务随web 启动而启动</description>
    <listener-class>com.muchinfo.tcp.socket.ServerSocketListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>ManageCEPServlet</servlet-name>
    <servlet-class>com.hundsun.jres.impl.cep.servlet.ManageCEPServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ManageCEPServlet</servlet-name>
    <url-pattern>/manager/cep/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CommonCEPServlet</servlet-name>
    <servlet-class>com.hundsun.jres.impl.cep.servlet.CommonCEPServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CommonCEPServlet</servlet-name>
    <url-pattern>/common/cep/*</url-pattern>
  </servlet-mapping>
</web-app>